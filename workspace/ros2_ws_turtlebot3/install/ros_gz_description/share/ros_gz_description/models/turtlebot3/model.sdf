<?xml version="1.0" ?>
<sdf version='1.8' xmlns:xacro="http://ros.org/wiki/xacro">
  <model name="turtlebot3_waffle" canonical_link='base_link'>

    <!-- Robot Base -->
    <link name="base_link">
      <must_be_base_link>true</must_be_base_link>
      <visual name="base_link_visual">
        <pose>-0.064 0 0.01 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://ros_gz_description/models/turtlebot3/meshes/waffle_base.dae</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <diffuse> 0.921568627 0.925490196 0.941176471 1</diffuse>
          <ambient> 0.921568627 0.925490196 0.941176471 1</ambient>
          <specular>0.921568627 0.925490196 0.941176471 1</specular>
        </material>
      </visual>
      <collision name="base_link_collision">
        <pose>-0.064 0 0.057 0 0 0</pose>
        <geometry>
          <box>
            <size>0.266 0.266 0.094</size>
          </box>
        </geometry>
      </collision>
      <inertial>
        <pose>-0.006056477959657685 0 0.01926442051009627 0 0 0</pose>
        <mass>1.4969096</mass>
        <inertia>
          <ixx>0.01330968881636598</ixx>
          <ixy>-4.7576583000000001e-05</ixy>
          <ixz>0.00091064575365546732</ixz>
          <iyy>0.013913324787183729</iyy>
          <iyz>-3.5422299000000002e-06</iyz>
          <izz>0.018379012970817749</izz>
        </inertia>
      </inertial>
    </link>


    <!-- Robot Footprint -->
    <link name='base_footprint'>
      <pose relative_to="base_joint"/>
    </link>

    <joint name='base_joint' type='fixed'>
      <parent>base_link</parent>
      <child>base_footprint</child>
      <pose relative_to="base_link"/>
    </joint>


    <!-- Wheel left -->
    <link name='wheel_left_link'>
      <pose relative_to='wheel_left_joint'/>
      <visual name='wheel_left_link_visual'>
        <pose>0 0 0 1.57 0 0</pose>
        <geometry>
          <mesh>
            <scale>0.001 0.001 0.001</scale>
            <uri>package://ros_gz_description/models/turtlebot3/meshes/tire.dae</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.375 0.375 0.375 1</diffuse>
          <ambient>0.375 0.375 0.375 1</ambient>
        </material>
      </visual>
      <collision name='wheel_left_link_collision'>
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.017999999999999999</length>
            <radius>0.033000000000000002</radius>
          </cylinder>
        </geometry>
      </collision>
      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>0.02849894</mass>
        <inertia>
          <ixx>1.117558e-05</ixx>
          <ixy>-4.2369783000000002e-11</ixy>
          <ixz>-5.9381719000000002e-09</ixz>
          <iyy>1.1192413e-05</iyy>
          <iyz>-1.4400107e-11</iyz>
          <izz>2.0712558000000001e-05</izz>
        </inertia>
      </inertial>
    </link>

    <joint name='wheel_left_joint' type='revolute'>
      <parent>base_link</parent>
      <child>wheel_left_link</child>
      <pose relative_to='base_link'>0 0.144 0.033 -1.57 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-inf</lower>
          <upper>inf</upper>
        </limit>
        <dynamics>
          <spring_reference>0</spring_reference>
          <spring_stiffness>0</spring_stiffness>
        </dynamics>
      </axis>
    </joint>


    <!-- Wheel right -->
    <link name='wheel_right_link'>
      <pose relative_to='wheel_right_joint'/>
      <visual name='wheel_right_link_visual'>
        <pose>0 0 0 1.57 0 0</pose>
        <geometry>
          <mesh>
            <scale>0.001 0.001 0.001</scale>
            <uri>package://ros_gz_description/models/turtlebot3/meshes/tire.dae</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.375 0.375 0.375 1</diffuse>
          <ambient>0.375 0.375 0.375 1</ambient>
        </material>
      </visual>
      <collision name='wheel_right_link_collision'>
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <cylinder>
            <length>0.017999999999999999</length>
            <radius>0.033000000000000002</radius>
          </cylinder>
        </geometry>
      </collision>
      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>0.02849894</mass>
        <inertia>
          <ixx>1.117558e-05</ixx>
          <ixy>-4.2369783000000002e-11</ixy>
          <ixz>-5.9381719000000002e-09</ixz>
          <iyy>1.1192413e-05</iyy>
          <iyz>-1.4400107e-11</iyz>
          <izz>2.0712558000000001e-05</izz>
        </inertia>
      </inertial>
    </link>

    <joint name='wheel_right_joint' type='revolute'>
      <parent>base_link</parent>
      <child>wheel_right_link</child>
      <pose relative_to='base_link'>0 -0.144 0.033 -1.57 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-inf</lower>
          <upper>inf</upper>
        </limit>
        <dynamics>
          <spring_reference>0</spring_reference>
          <spring_stiffness>0</spring_stiffness>
        </dynamics>
      </axis>
    </joint>

    <!-- Caster back right -->
    <link name='caster_back_right_link'>
      <pose relative_to="caster_back_right_joint"/>
      
      <collision name='collision'>
        <geometry>
          <sphere>
            <radius>0.005000</radius>
          </sphere>
        </geometry>
        <surface>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e+5</kp>
              <kd>1</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>0.00001</ixx>
          <ixy>0.000</ixy>
          <ixz>0.000</ixz>
          <iyy>0.00001</iyy>
          <iyz>0.000</iyz>
          <izz>0.00001</izz>
        </inertia>
      </inertial>
    </link>

    <joint name='caster_back_right_joint' type='ball'>
      <parent>base_link</parent>
      <child>caster_back_right_link</child>
      <pose relative_to="base_link">-0.177 -0.064 -0.004 -1.57 0 0</pose>
    </joint>


    <!-- Caster back left -->
    <link name='caster_back_left_link'>
      <pose relative_to="caster_back_left_joint"/>
      <collision name='collision'>
        <geometry>
          <sphere>
            <radius>0.005000</radius>
          </sphere>
        </geometry>
        <surface>
          <contact>
            <ode>
              <soft_cfm>0</soft_cfm>
              <soft_erp>0.2</soft_erp>
              <kp>1e+5</kp>
              <kd>1</kd>
              <max_vel>0.01</max_vel>
              <min_depth>0.001</min_depth>
            </ode>
          </contact>
        </surface>
      </collision>
      <inertial>
        <mass>0.001</mass>
        <inertia>
          <ixx>0.00001</ixx>
          <ixy>0.000</ixy>
          <ixz>0.000</ixz>
          <iyy>0.00001</iyy>
          <iyz>0.000</iyz>
          <izz>0.00001</izz>
        </inertia>
      </inertial>
    </link>

    <joint name='caster_back_left_joint' type='ball'>
      <parent>base_link</parent>
      <child>caster_back_left_link</child>
      <pose relative_to="base_link">-0.177 0.064 -0.004 -1.57 0 0</pose>
    </joint>











    <!-- IMU -->
    <link name="imu_link">
      <pose relative_to="imu_joint"/>
      <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>200</update_rate>
        <visualize>true</visualize>
        <topic>/turtlebot3_waffle/imu</topic>
        <ignition_frame_id>imu_link</ignition_frame_id>
        <imu>
          <angular_velocity>
            <x>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>2e-4</stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>2e-4</stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>2e-4</stddev>
              </noise>
            </z>
          </angular_velocity>
          <linear_acceleration>
            <x>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.7e-2</stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.7e-2</stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.7e-2</stddev>
              </noise>
            </z>
          </linear_acceleration>
        </imu>
      </sensor>
    </link>

    <joint name="imu_joint" type="fixed">
      <parent>base_link</parent>
      <child>imu_link</child>
      <pose relative_to="base_link">-0.032 0 0.068 0 0 0</pose>
    </joint>

    <!-- LIDAR -->
    <link name="lidar_link">
      <pose relative_to='lidar_joint'/>
      <collision name="lidar_link_collision">
        <geometry>
          <cylinder>
            <radius>0.0508</radius>
            <length>0.055</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="lidar_link_visual">
        <geometry>
          <mesh>
            <uri>package://ros_gz_description/models/turtlebot3/meshes/lds.dae</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <material>
          <diffuse> 0.145098039 0.156862745 0.164705882 1</diffuse>
          <ambient> 0.145098039 0.156862745 0.164705882 1</ambient>
          <specular>0.145098039 0.156862745 0.164705882 1</specular>
        </material>
      </visual>
      <inertial>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
        <mass>0.114</mass>
      </inertial>
      <sensor name="gpu_lidar" type="gpu_lidar">
        <pose>-0.064 0 0.121 0 0 0</pose>
        <topic>/turtlebot3_waffle/scan</topic>
        <ignition_frame_id>turtlebot3_waffle/lidar_link</ignition_frame_id>
        <update_rate>5</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>360</samples>
              <resolution>1</resolution>
              <min_angle>0</min_angle>
              <max_angle>6.28</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.120000</min>
            <max>20.0</max>
            <resolution>0.015000</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        <always_on>true</always_on>
        <visualize>1</visualize>
      </sensor>
    </link>

    <joint name="lidar_joint" type="fixed">
      <parent>base_link</parent>
      <child>lidar_link</child>
      <pose relative_to="base_link">-0.064 0 0.121 0 0 0</pose>
    </joint>



    <!-- Camera -->

    <link name="camera_link">
      <pose relative_to='camera_joint'/>
      <inertial>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0.000</ixy>
          <ixz>0.000</ixz>
          <iyy>0.001</iyy>
          <iyz>0.000</iyz>
          <izz>0.001</izz>
        </inertia>
        <mass>0.035</mass>
      </inertial>
      <sensor name="camera" type="camera">
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>30</update_rate>
        <topic>/turtlebot3_waffle/camera/image_raw</topic>
        <camera_info_topic>/turtlebot3_waffle/camera/camera_info</camera_info_topic>
        <ignition_frame_id>camera_frame</ignition_frame_id>
        <camera name="intel_realsense_r200">
          <horizontal_fov>1.02974</horizontal_fov>
          <image>
            <width>1920</width>
            <height>1080</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.02</near>
            <far>300</far>
          </clip>
          <noise>
            <type>gaussian</type>
            <!-- Noise is sampled independently per pixel on each frame.
                  That pixel's noise value is added to each of its color
                  channels, which at that point lie in the range [0,1]. -->
            <mean>0.0</mean>
            <stddev>0.007</stddev>
          </noise>
        </camera>
      </sensor>
    </link>

    <joint name="camera_joint" type="fixed">
      <parent>base_link</parent>
      <child>camera_link</child>
      <pose relative_to="base_link">0.069 -0.047 0.107 0 0 0</pose>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>



    <!-- IMU -->
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu"/>

    <!-- Global odometer -->
    <plugin
      filename="ignition-gazebo-odometry-publisher-system"
      name="ignition::gazebo::systems::OdometryPublisher">
      <odom_publish_frequency>50</odom_publish_frequency>
      <odom_topic>/turtlebot3_waffle/odom</odom_topic>
      <odom_frame>turtlebot3_waffle/odom</odom_frame>
      <robot_base_frame>turtlebot3_waffle</robot_base_frame>
    </plugin>

    <!-- Differential drive -->
    <plugin
      filename="ignition-gazebo-diff-drive-system"
      name="ignition::gazebo::systems::DiffDrive">
      <left_joint>wheel_left_joint</left_joint>
      <right_joint>wheel_right_joint</right_joint>
      <wheel_separation>0.287</wheel_separation>
      <wheel_radius>0.033</wheel_radius>
      <topic>cmd_vel</topic>
      <child_frame_id>base_link</child_frame_id>
      <!-- <max_linear_acceleration>1</max_linear_acceleration>
      <min_linear_acceleration>-1</min_linear_acceleration>
      <max_angular_acceleration>2</max_angular_acceleration>
      <min_angular_acceleration>-2</min_angular_acceleration>
      <max_linear_velocity>0.5</max_linear_velocity>
      <min_linear_velocity>-0.5</min_linear_velocity>
      <max_angular_velocity>1</max_angular_velocity>
      <min_angular_velocity>-1</min_angular_velocity> -->
    </plugin>

    <!-- Joint state publisher -->
    <plugin
      filename="ignition-gazebo-joint-state-publisher-system"
      name="ignition::gazebo::systems::JointStatePublisher">
    </plugin>


    <!-- Pose publisher -->

    <plugin
        filename="ignition-gazebo-pose-publisher-system"
        name="ignition::gazebo::systems::PosePublisher">
        <publish_link_pose>true</publish_link_pose>
        <use_pose_vector_msg>true</use_pose_vector_msg>
        <static_publisher>true</static_publisher>
        <static_update_frequency>1</static_update_frequency>
      </plugin>

  </model>
</sdf>